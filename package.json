
{
  "name": "digital-footprint-shrinker",
  "version": "1.0.0",
  "description": "Professional Privacy Cleanup Tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "vite build",
    "dist": "electron-builder"
  },
  "author": "Senior Security Architect",
  "license": "MIT",
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "@heroicons/react": "^2.2.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0"
  },
  "build": {
    "appId": "com.privacy.footprintshrinker",
    "productName": "Digital Footprint Shrinker",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "category": "public.app-category.utilities",
